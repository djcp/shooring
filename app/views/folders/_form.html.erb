<%= form_for [@activity, @folder], html: { multipart: true } do |f| %>
<% if @folder.errors.any? %>
 <div id="error_explanation" >
 <h2><%= pluralize(@folder.errors.count, "error") %>
    prohibited this folder from being saved:</h2>

   <ul>
    <% @folder.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
   </ul>
  </div>
<% end %>

 <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
 </p>

 <p>
  <%= f.label :description %><br />
  <%= f.text_field :description %>
 </p>
 <% number = 0 %>
 <%= f.fields_for :assets do |asset| %>
   <p>
    <%= asset.label :asset, "File ##{number += 1}" %>
    <%= asset.file_field :asset %>
   </p>
 <% end %>
 <%= f.submit %>
<% end %>
